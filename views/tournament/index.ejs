<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs')  %>
</head>
<body>
    <nav>
        <%- include('../partials/nav.ejs')  %>
        </nav>
    <h1>Tournaments</h1>
    <table>
        <tr>
            <th>Name</th>
            <th>Date (yyyy/mm/dd)</th>
            <th>Location</th>
            <th>Information</th>
        </tr>
        <% tournament.forEach(tournament => { %>
            <tr>    
                <td><%=tournament.name %></td>
                <td><%=tournament.startDate %> to <%=tournament.endDate %></td>
                <td><%=tournament.address %></td>
                <td><a href="/tournament/<%=tournament._id; %>">For More Information</a></td>
            </tr>
        <% }) %>
    </table>

</body>
</html>